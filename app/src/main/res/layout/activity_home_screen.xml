<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".HomeScreenActivity">

    <TextView
        android:id="@+id/txtRomance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Romance"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/romanceButton"
        app:layout_constraintStart_toStartOf="@+id/romanceButton"
        app:layout_constraintTop_toBottomOf="@+id/romanceButton" />

    <TextView
        android:id="@+id/txtComedy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Comedy"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/comedyButton"
        app:layout_constraintStart_toStartOf="@+id/comedyButton"
        app:layout_constraintTop_toBottomOf="@+id/comedyButton" />

    <TextView
        android:id="@+id/txtHorror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Horror"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/horrorButton"
        app:layout_constraintStart_toStartOf="@+id/horrorButton"
        app:layout_constraintTop_toBottomOf="@+id/horrorButton" />

    <TextView
        android:id="@+id/txtDrama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Drama"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/dramaButton"
        app:layout_constraintStart_toStartOf="@+id/dramaButton"
        app:layout_constraintTop_toBottomOf="@+id/dramaButton" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/romanceButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="6dp"
        android:adjustViewBounds="true"
        android:background="@drawable/custom_background_icons"
        android:contentDescription="Romance"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/comedyButton"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/comedyButton"
        app:shapeAppearanceOverlay="@style/rounded"
        android:padding="0dp"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/comedyButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:adjustViewBounds="true"
        android:background="@drawable/custom_background_icons"
        android:contentDescription="Comedy"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/dramaButton"
        app:layout_constraintStart_toEndOf="@+id/romanceButton"
        app:layout_constraintTop_toTopOf="@+id/dramaButton"
        app:shapeAppearanceOverlay="@style/rounded" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/dramaButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:background="@drawable/custom_background_icons"
        android:contentDescription="Drama"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/horrorButton"
        app:layout_constraintStart_toEndOf="@+id/comedyButton"
        app:layout_constraintTop_toTopOf="@+id/horrorButton"
        app:shapeAppearanceOverlay="@style/rounded" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/horrorButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="6dp"
        android:adjustViewBounds="true"
        android:background="@drawable/custom_background_icons"
        android:contentDescription="Horror"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintStart_toEndOf="@+id/dramaButton"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:shapeAppearanceOverlay="@style/rounded" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="34dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="376dp" />

    <SearchView
        android:id="@+id/searchbar"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/searchviewbackground"
        android:iconifiedByDefault="false"
        android:queryHint="@string/SW"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Welcome, pick a movie"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Airing this month:"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/txtHorror" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="145dp"
        android:layout_height="26dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="192dp"
        android:text="Choose the Distance"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/searchbar" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/filter_button"
        android:text="Filter"
        android:textAlignment="center"
        app:backgroundTint="@color/tint"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/searchbar"
        app:rippleColor="#FBFAFA"
        android:visibility="gone"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view_hs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu"
        android:backgroundTint="@color/background_theme"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewHomeScreen"


        android:layout_width="410dp"
        android:layout_height="363dp"

        android:layout_marginTop="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.111" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="131dp"
        android:layout_height="26dp"
        android:layout_marginTop="24dp"
        android:max="100"
        android:progress="2"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/searchbar" />

    <TextView
        android:id="@+id/seekBarValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/seekBar"
        app:layout_constraintTop_toBottomOf="@+id/searchbar" />

</androidx.constraintlayout.widget.ConstraintLayout>