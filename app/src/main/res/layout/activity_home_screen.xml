<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".HomeScreenActivity">

    <TextView
        android:id="@+id/txtRomance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Romance"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/romanceButton"
        app:layout_constraintStart_toStartOf="@+id/romanceButton"
        app:layout_constraintTop_toBottomOf="@+id/romanceButton" />

    <TextView
        android:id="@+id/txtComedy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Comedy"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/comedyButton"
        app:layout_constraintStart_toStartOf="@+id/comedyButton"
        app:layout_constraintTop_toBottomOf="@+id/comedyButton" />

    <TextView
        android:id="@+id/txtHorror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Horror"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/horrorButton"
        app:layout_constraintStart_toStartOf="@+id/horrorButton"
        app:layout_constraintTop_toBottomOf="@+id/horrorButton" />

    <TextView
        android:id="@+id/txtDrama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Drama"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/dramaButton"
        app:layout_constraintStart_toStartOf="@+id/dramaButton"
        app:layout_constraintTop_toBottomOf="@+id/dramaButton" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/romanceButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:adjustViewBounds="true"
        android:background="@drawable/custom_background_icons"
        android:contentDescription="Romance"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/comedyButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/comedyButton"
        app:shapeAppearanceOverlay="@style/rounded" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/comedyButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:background="@drawable/custom_background_icons"
        android:contentDescription="Comedy"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/dramaButton"
        app:layout_constraintStart_toEndOf="@+id/romanceButton"
        app:layout_constraintTop_toTopOf="@+id/dramaButton"
        app:shapeAppearanceOverlay="@style/rounded" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/dramaButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:background="@drawable/custom_background_icons"
        android:contentDescription="Drama"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/horrorButton"
        app:layout_constraintStart_toEndOf="@+id/comedyButton"
        app:layout_constraintTop_toTopOf="@+id/horrorButton"
        app:shapeAppearanceOverlay="@style/rounded" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/horrorButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:adjustViewBounds="true"
        android:background="@drawable/custom_background_icons"
        android:contentDescription="Horror"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dramaButton"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:shapeAppearanceOverlay="@style/rounded" />


    <SearchView
        android:id="@+id/searchbar"
        android:layout_width="305dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/searchviewbackground"
        android:iconifiedByDefault="false"
        android:queryHint="@string/SW"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWelcome" />

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Welcome, pick a movie"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Airing this month:"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHorror" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:text="Choose the Distance"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchbar" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewHomeScreen"


        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="129dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:max="100"
        android:progress="2"
        app:layout_constraintEnd_toStartOf="@+id/seekBarValue"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/searchbar" />

    <TextView
        android:id="@+id/seekBarValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/seekBar"
        app:layout_constraintTop_toBottomOf="@+id/searchbar" />

</androidx.constraintlayout.widget.ConstraintLayout>