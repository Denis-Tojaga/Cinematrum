<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="257dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:backgroundTint="@color/background_theme"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imgMovieWallpaper"
            android:layout_width="@dimen/ticket_movie_img_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ticket_screen_adapterimg_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/txtMovieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/trenda_semibold"
            android:text="Movie title"
            android:textColor="@color/white"
            android:textSize="@dimen/ticket_movie_title_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintStart_toEndOf="@+id/imgMovieWallpaper"
            app:layout_constraintTop_toTopOf="@+id/imgMovieWallpaper" />

        <TextView
            android:id="@+id/txtMoviePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ticket_movie_label_marginTop"
            android:fontFamily="@font/trenda_semibold"
            android:text="Movie price"
            android:textColor="@color/white"
            android:textSize="@dimen/ticket_movie_price_label"
            app:layout_constraintStart_toStartOf="@+id/txtMovieTitle"
            app:layout_constraintTop_toBottomOf="@+id/txtMovieTitle" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ticket_movie_label_marginTop"
            android:fontFamily="@font/trenda_regular"
            android:text="@string/ticket_row"
            android:textColor="@color/input_field_background"
            android:textSize="@dimen/ticket_movie_row_seat_label"
            app:layout_constraintStart_toStartOf="@+id/txtMoviePrice"
            app:layout_constraintTop_toBottomOf="@+id/txtMoviePrice" />

        <TextView
            android:id="@+id/txtMovieRowNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/trenda_semibold"
            android:text="1"
            android:textColor="@color/input_field_background"
            android:textSize="@dimen/ticket_movie_row_seat_label"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/trenda_regular"
            android:text="@string/ticket_seat"
            android:textColor="@color/input_field_background"
            android:textSize="@dimen/ticket_movie_row_seat_label"
            app:layout_constraintBottom_toBottomOf="@+id/txtMovieRowNumber"
            app:layout_constraintStart_toEndOf="@+id/txtMovieRowNumber"
            app:layout_constraintTop_toTopOf="@+id/txtMovieRowNumber" />

        <TextView
            android:id="@+id/txtMovieSeatNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/trenda_semibold"
            android:text="2a"
            android:textColor="@color/input_field_background"
            android:textSize="@dimen/ticket_movie_row_seat_label"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <TextView
            android:id="@+id/txtMovieCinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ticket_movie_label_marginTop"
            android:text="Cinema"
            android:fontFamily="@font/trenda_regular"
            android:textColor="@color/input_field_background"
            android:textSize="@dimen/ticket_movie_row_seat_label"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/txtMovieReservedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/trenda_regular"
            android:text="Reserved At"
            android:textColor="@color/input_field_background"
            android:textSize="@dimen/ticket_movie_row_seat_label"
            app:layout_constraintBottom_toBottomOf="@+id/imgMovieWallpaper"
            app:layout_constraintStart_toStartOf="@+id/txtMovieCinema"
            app:layout_constraintTop_toBottomOf="@+id/txtMovieCinema" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>